<%= form_for(@message) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new message..." %>
  </div>
  <%= f.hidden_field :reception_id, value: @user.id %>
  <%= f.submit "Post", class: "btn btn-primary" %>

<% end %>
